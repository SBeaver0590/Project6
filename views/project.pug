extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- dynamically added the project title.
        h1 #{project.project_name}

        //- dynamically added the project description.
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 #{technologies}

        //- an `each` iterator to replace the li tags below, and interpolated to dynamically add the technologies used in each project.

        ul
          each technology in project.technologies
            li= technology

        //- interpolated to add URLs to the hrefs below so they link to the repo and the live version of each project.
        a.button.expanded(href=`${project.live_link}`, target='_blank') Live Demo
        a.button.expanded(href=`${project.github_link}`, target='_blank') GitHub Repo
    
    //- Pictures to demonstrate thoroughness and demonstration
    img.image(src=`${project.image_urls[1]}`)
    img.image(src=`${project.image_urls[2]}`)
    img.image(src=`${project.image_urls[3]}`)